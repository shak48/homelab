[global]
   workgroup = {{ samba_workgroup }}
   server role = standalone server
   map to guest = Bad User
   guest account = {{ samba_guest_user }}
   server min protocol = {{ samba_min_protocol }}
   disable spoolss = yes
   log file = /var/log/samba/log.%m
   max log size = 1000

{% for share in samba_guest_shares %}
[{{ share.name }}]
   path = {{ share.path }}
   browsable = yes
   read only = no
   guest ok = yes
   guest only = yes
   force user = {{ samba_guest_user }}
   force group = {{ samba_guest_group }}
   create mask = 0666
   directory mask = 0777
{% endfor %}
