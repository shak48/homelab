version: "3.3"

services:
  mc:
    image: itzg/minecraft-server:latest
    container_name: minecraft-server
    restart: unless-stopped
    ports:
      - "{{ minecraft_docker_port | default(25565) }}:25565"
    environment:
      EULA: "TRUE"
      TYPE: "FORGE"
      MEMORY: "{{ minecraft_memory | default('4G') }}"
      TZ: "{{ timezone | default('America/New_York') }}"
      # Optional but helpful for Forge stability:
      # VERSION: "1.20.1"
      # FORGE_VERSION: "47.2.0"
    volumes:
      - "{{ minecraft_data_dir }}:/data"
    stdin_open: true
    tty: true
