version: "3.9"
services:
  npm:
    image: jc21/nginx-proxy-manager:latest
    restart: always
    ports:
      - "80:80"
      - "81:81"
      - "443:443"
    environment:
      DISABLE_IPV6: "true"
    volumes:
      - npm-data:/data
      - npm-ssl:/etc/letsencrypt
      # Mount self-signed certs for custom SSL
      - /opt/npm-certs:/certs:ro

volumes:
  npm-data:
  npm-ssl:
